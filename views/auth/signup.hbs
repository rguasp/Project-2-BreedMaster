<!-- views/auth/signup.hbs -->

<div class="signup">

<div class="center">
<h2><span class="babyblue">Signup</span></h2>

<form action="/signup" method="POST" id="form-container">
  <label for="username"><span class="white">UserName ></span></label>
  <input id="username" type="text" name="username" placeholder="UserName">
  <br><br>
  <label for="password"><span class="white">Password ></span></label>
  <input id="password" type="password" name="password" placeholder="Password">
  <br><br>
  <label for="email"><span class="white">Email Address ></span></label>
  <input id="email" type="text" name="email" placeholder="Email Address">

  {{#if message}}
    <div class="error-message"><span class="white">{{ message }}</span></div>
  {{/if}}
  <br><br>

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/login"><span class="babyblue">Log In</span></a>
  </p>
</form>
</div>
</div>